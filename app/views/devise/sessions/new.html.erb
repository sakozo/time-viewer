<%= render partial: "template/page_top"%>
<div id="top-row">
  <div class="row">
    <div class="col s8 m8 l8 offset-l2">

      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="input-field">
        <i class="material-icons prefix">local_post_office</i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "icon_prefix", class: "materialize-textarea" %>
        <label for="icon_prefix">email</label>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">lock_outline</i>
        <%= f.password_field :password, autocomplete: "current-password", id: "icon_prefix2", class: "materialize-textarea" %>
        <label for="icon_prefix2">password</label>
      </div>

      <!--<% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>-->
      <div class="row">
        <div class="col s12 offset-1 actions">
          <%= f.submit "ログイン", class: "btn-large" %>
        </div>
      </div>
      <% end %>

      <!-- <%= render "devise/shared/links" %> -->

    </div>
  </div>
</div>