<h1>Time Viewer(仮)</h1>
<%= link_to user_path(current_user.id) do %>
  <button id = "" , class: "btn btn-primary">入力画面</button>
<% end %>

<%= link_to settings_path(current_user.id) do %>
  <button id = "" , class: "btn btn-primary">設定画面へ</button>
<% end %>

<%= link_to chart_path(current_user.id) do %>
  <button id = "" , class: "btn btn-primary">グラフ画面</button>
<% end %>

<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

<br>
<br>


<% @tweets.each do |tweet| %>
  <% if tweet.user.icon.attached? %>
    <%= image_tag tweet.user.icon, height: 30, width: 30 %>
  <% else %>
    <%= image_tag "icon/icon.jpg", height: 30, width: 30 %>
  <% end %>
  <%= tweet.user.name %>さんが <%= tweet.record_date %> <%= tweet.text %>の入力を行いました。<%= tweet.created_at %><br><br>
<% end %>


<% if user_signed_in? %>
<p>ユーザー一覧<p>
  <% @users.each do |user| %>
  <p><a href="/users/<%= user.id %>"><%= user.name %>さん</a></p>
  <hr>
  <% end %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "ユーザーを登録する", new_user_registration_path %>
  <br>
  <%= link_to "ログインする", new_user_session_path %>
<% end %>
